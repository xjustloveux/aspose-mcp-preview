{
  "name": "aspose-mcp-preview",
  "version": "1.0.0",
  "description": "Real-time document preview extension for aspose-mcp-server",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "aspose-mcp-preview": "./bin/aspose-mcp-preview.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node bin/aspose-mcp-preview.js",
    "dev": "node bin/aspose-mcp-preview.js",
    "lint": "eslint src/ public/ bin/",
    "lint:fix": "eslint src/ public/ bin/ --fix",
    "format": "prettier --write src/ public/ bin/",
    "format:check": "prettier --check src/ public/ bin/",
    "code-quality": "npm run format && npm run lint:fix"
  },
  "keywords": [
    "aspose",
    "mcp",
    "preview",
    "document",
    "word",
    "excel",
    "powerpoint",
    "pdf"
  ],
  "author": {
    "name": "JaJa",
    "email": "xjustloveux@gmail.com",
    "url": "https://dream-ja.com"
  },
  "license": "MIT",
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "fastify": "^5.7.4",
    "koffi": "^2.15.1",
    "minimist": "^1.2.8",
    "open": "^11.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.4",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "semantic-release": "^25.0.3"
  },
  "files": [
    "bin",
    "src",
    "public",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/xjustloveux/aspose-mcp-preview.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
